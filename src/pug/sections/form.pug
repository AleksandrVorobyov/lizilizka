section.form.display-none#form
    form(action="#" class='form-wrapper')
        .form-border
            .form-title
                h2 Напишите нам:
            .form-wrap
                input(type="name" placeholder="Имя и Фамилия")
                input(type="email" placeholder="Email")
                input(type="tel" placeholder="Номер телефона")
                textarea#textarea(name="", cols="30", rows="5" placeholder="Оставьте свой коментарий")
                .form-submit
                    input(type="submit")
                    input(type="reset")
            .form-exit#formExit
                <i class="fa fa-times fa-3x" aria-hidden="true"></i>